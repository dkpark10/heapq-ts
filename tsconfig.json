{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "outDir": "./build",
    "rootDir": "./",
    "strictPropertyInitialization": true,
    "declaration": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "./node_modules/**/*"
  ],
  "include": [
    "./src/**/*",
    "@type"
  ]
}